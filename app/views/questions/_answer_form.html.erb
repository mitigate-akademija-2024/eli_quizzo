<!--app/views/questions/_answer_form.html.erb-->
<li class="nested-form-wrapper" data-new-record="<%= form.object.new_record? %>">
  <%= form.label :answer_text %>
  <%= form.text_field :answer_text %>
  <%= form.check_box :correct %>

  <button type="button" data-action="nested-form#remove" class='<%= btn_class_small %>'>Remove answer</button>

  <%= form.hidden_field :_destroy %>
</li>
